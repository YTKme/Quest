{% extends 'base.html.twig' %}

{#########
 # Title #
 #########}
{% block title %}Achievement{% endblock %}

{##############################
 # Cascading Style Sheet Head #
 ##############################}
{% block csshead %}{% endblock %}

{###################
 # JavaScript Head #
 ###################}
{% block jshead %}{% endblock %}

{######################
 # Miscellaneous Head #
 ######################}
{% block mischead %}
{% include 'inc/datatables.html.twig' %}

<!-- Miscellaneous -->
<script type="text/javascript" src="{{ RESOURCE }}/js/main.js"></script>
<script type="text/javascript" src="{{ RESOURCE }}/js/achievement.js"></script>
{% endblock %}

{########
 # Body #
 ########}
{% block body %}

<header class="page-header container">
	<h2>Achievement</h2>
</header>

<div id="msgAlert"></div>

<aside>
	<p><button id="btnAddAchievement" class="btn btn-success" type="button">Add Achievement</button></p>
	<table id="dTable" class="table tblAchievement">
		<thead>
			<tr>
				<th>Name</th>
				<th>Icon</th>
				<th>Point</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody>
		</tbody>
	</table>
</aside>

<div id="dlgAchievementInformation" class="hide">
	<form id="frmAchievementInformation" role="form" enctype="multipart/form-data">
		<div id="msgState"></div>
		<div class="form-group">
			<label for="txtName">Name</label>
			<input id="txtName" class="form-control" name="txtName" type="text" placeholder="Name" />
		</div>
		<div class="form-group">
			<label for="txtDescription">Description</label>
			<textarea id="txtDescription" class="form-control" name="txtDescription" rows="3" placeholder="Description"></textarea>
		</div>
		<div class="form-group">
			<label for="binIcon">Icon</label>
			<input id="binIcon" name="binIcon" type="file">
		</div>
		<div class="form-group">
			<label for="txtPoint">Point</label>
			<input id="txtPoint" class="form-control" name="txtPoint" type="number" placeholder="0" />
		</div>
		<div class="form-group">
			<label for="ddGame">Game</label>
			<select id="ddGame" class="form-control" name="ddGame">
				<option value="">Select Game</option>
			</select>
		</div>
	</form>
</div>

<div id="dlgRemoveAchievement" class="hide">
</div>
		
{% endblock %}

{###################
 # JavaScript Tail #
 ###################}
{% block jstail %}{% endblock %}